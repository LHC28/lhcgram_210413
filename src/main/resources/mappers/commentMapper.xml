<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhcgram.comment.dao.CommentDAO">
	<select id="selectCommentList" resultType="com.lhcgram.comment.model.Comment">
		SELECT
			`id`
			,`postId`
			,`userId`
			,`userName`
			,`content`
			,`createdAt`
			,`updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
		ORDER BY `id` DESC
	</select>
	
	<insert id="create" parameterType="map">
		INSERT INTO `comment`
		(
			`postId`
			,`userId`
			,`userName`
			,`content`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{postId}
			,#{userId}
			,#{userName}
			,#{content}
			,NOW()
			,NOW()
		)
	</insert>
	
	<delete id="deleteById">
		DELETE
		FROM
			`comment`
		WHERE
			`id` = #{commentId}
	</delete>
	
	<delete id="deleteByPostId">
		DELETE
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
	</delete>
</mapper>