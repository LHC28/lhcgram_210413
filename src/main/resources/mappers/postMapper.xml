<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhcgram.post.dao.PostDAO">

	<select id="selectPost" resultType="com.lhcgram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
	
	<select id="selectPostList" resultType="com.lhcgram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>

	<insert id="postCreate" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`userName`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{userLoginId}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	
	<delete id="delete" parameterType="map">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</delete>
</mapper>