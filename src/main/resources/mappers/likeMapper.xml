<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lhcgram.like.dao.LikeDAO">
	<select id="selectLikeCount" resultType="Integer">
		SELECT
			`userId`
			,`postId`
			,`createdAt`
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	</select>
	<select id="selectMylike" resultType="com.lhcgram.like.model.Like">
		SELECT
			`userId`
			,`postId`
			,`createdAt`
		FROM
			`like`
		WHERE
			`userId` = #{userId}
	</select>
</mapper>
